<h3 class="page-header">サークル一覧</h3>
{{#if errors}}
  {{#each errors}}
<div class="alert alert-danger">{{msg}}</div>
  {{/each}}
{{/if}}
<form method="post" action="/list">
  <label>新しいサークルを作成する</label>
  <input type="text" name="circlename" placeholder="サークル名">
  <input class="waves-effect waves-light btn-large" type="submit" value="作成">
</form>



{{#each circle}}
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">{{circlename}}</span>
        <p>I am a very simple card. I am good at containing small bits of information.
        I am convenient because I require little markup to use effectively.</p>
        <p>人数: {{members.length}} 人</p>
      </div>
      <div class="card-action">
        <a href="/detail/{{_id}}">詳細</a>
        <a href="#">トークルーム</a>
      </div>
    </div>
  </div>
</div>
{{/each}}
